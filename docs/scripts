# test shannon entropy, 3 neuron, neural output
python -m dyadic_interaction.main --dir ./data/shannon_entropy_test/3n_neural --entropy shannon --entropy_target_value neural_outputs --cores 40 --seed 0 --num_neurons=3 --popsize 40 --num_gen 10 --trial_duration 200

# test shannon entropy, 3 neurons, agents distance
python -m dyadic_interaction.main --dir ./data/shannon_entropy_test/n3_distance --entropy shannon --entropy_target_value agents_distance --cores 40 --seed 0 --num_neurons=3 --popsize 40 --num_gen 10 --trial_duration 200

# test transfer entropy, 2 neurons, neural output
python -m dyadic_interaction.main --dir ./data/transfer_entropy_test/n2_neural --entropy transfer --entropy_target_value neural_outputs --cores 40 --seed 0 --num_neurons=2 --popsize 40 --num_gen 10 --trial_duration 200

# test sample entropy, 3 neurons, agents distance
python -m dyadic_interaction.main --dir ./data/sample_entropy_test/3n_distance --entropy sample --entropy_target_value agents_distance --cores 40 --seed 0 --num_neurons=3 --popsize 40 --num_gen 10 --trial_duration 200

